<footer>–ó–∞–≤–∞–Ω—Ç–∞–∂/—Ä–µ–¥–∞–≥—É–π —Ü–µ–π —Ñ–∞–π–ª —è–∫ <code>index.html</code> —É —Å–≤–æ—î–º—É GitHub —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä—ñ—ó —ñ –≤–º–∏–∫–∞–π GitHub Pages.</footer>

  </div>  <audio id="ambient" loop preload="none">
    <!-- Replace with your audio file path or keep empty if you don't want audio -->
    <source id="audioSource" src="ambient.mp3" type="audio/mpeg">
    –í–∞—à –±—Ä–∞—É–∑–µ—Ä –Ω–µ –ø—ñ–¥—Ç—Ä–∏–º—É—î –∞—É–¥—ñ–æ –µ–ª–µ–º–µ–Ω—Ç.
  </audio>  <script>
    // --- Configuration ---
    // If you host the audio in your repo, use a relative path like 'ambient.mp3'.
    // If you host audio elsewhere, set AUDIO_URL to the HTTPS URL.
    const AUDIO_URL = 'ambient.mp3'; // edit before pushing if needed

    // --- Elements ---
    const playBtn = document.getElementById('playBtn');
    const muteBtn = document.getElementById('muteBtn');
    const surpriseBtn = document.getElementById('surpriseBtn');
    const ambient = document.getElementById('ambient');
    const audioSource = document.getElementById('audioSource');
    const ghost = document.getElementById('ghost');
    const qrLink = document.getElementById('qrLink');

    // Set audio source at runtime (so it's obvious what to change).
    if (AUDIO_URL) {
      audioSource.src = AUDIO_URL;
      ambient.load();
    }

    playBtn.addEventListener('click', async () => {
      try {
        // Start audio only after user gesture
        await ambient.play();
        playBtn.textContent = 'üîä –ê—Ç–º–æ—Å—Ñ–µ—Ä–∞ —É–≤—ñ–º–∫–Ω–µ–Ω–∞';
        playBtn.setAttribute('aria-pressed','true');
      } catch (err) {
        console.warn('–ù–µ –≤–¥–∞–ª–æ—Å—è –≤—ñ–¥—Ç–≤–æ—Ä–∏—Ç–∏ –∞—É–¥—ñ–æ –∞–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ ‚Äî –ø–µ—Ä–µ–∫–æ–Ω–∞–π—Ç–µ—Å—å, —â–æ —Ñ–∞–π–ª –¥–æ—Å—Ç—É–ø–Ω–∏–π —ñ –±—Ä–∞—É–∑–µ—Ä –¥–æ–∑–≤–æ–ª—è—î –≤—ñ–¥—Ç–≤–æ—Ä–µ–Ω–Ω—è.');
        alert('–ù–µ –≤–¥–∞–ª–æ—Å—è –≤—ñ–¥—Ç–≤–æ—Ä–∏—Ç–∏ –∞—É–¥—ñ–æ. –ü–µ—Ä–µ–≤—ñ—Ä—Ç–µ, –±—É–¥—å –ª–∞—Å–∫–∞, —á–∏ —Ñ–∞–π–ª ambient.mp3 –¥–æ–¥–∞–Ω–æ –¥–æ —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä—ñ—é –∞–±–æ –≤–∫–∞–∑–∞–Ω–æ –∫–æ—Ä–µ–∫—Ç–Ω–∏–π URL.');
      }
    });

    muteBtn.addEventListener('click', () => {
      ambient.pause();
      ambient.currentTime = 0;
      playBtn.textContent = 'üîä –£–≤—ñ–º–∫–Ω—É—Ç–∏ –∞—Ç–º–æ—Å—Ñ–µ—Ä—É';
      playBtn.setAttribute('aria-pressed','false');
    });

    surpriseBtn.addEventListener('click', () => {
      // gentle non-startling effect: ghost grows and waves, no sudden loud noises or flashes
      ghost.style.transition = 'transform 0.6s ease, opacity 0.6s ease';
      ghost.style.transform = 'scale(1.18) translateY(-6px)';
      setTimeout(() => { ghost.style.transform = ''; }, 900);
    });

    // QR button: will open a Google Chart API QR image for the current page URL.
    document.getElementById('viewQR').addEventListener('click', () => {
      const pageUrl = location.href;
      const encoded = encodeURIComponent(pageUrl);
      const qrUrl = `https://chart.googleapis.com/chart?chs=400x400&cht=qr&chl=${encoded}`;
      // open in new tab
      window.open(qrUrl,'_blank');
    });

    // Accessibility: enable keyboard activation
    [playBtn, muteBtn, surpriseBtn].forEach(b=>b.addEventListener('keyup', e => { if (e.key === 'Enter' || e.key === ' ') b.click(); }));

    // Small touch: if audio is missing, disable play button gently
    ambient.addEventListener('error', () => {
      playBtn.disabled = true;
      playBtn.textContent = '–ê—É–¥—ñ–æ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ';
      playBtn.style.opacity = 0.5;
    });
  </script></body>
